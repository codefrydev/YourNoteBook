@page "/landing"
@using MudBlazor

<MudContainer MaxWidth="MaxWidth.Large" Class="mt-16"> @* Main container for the page content *@

    @* --- Hero Section --- *@
    @* A prominent section to grab user attention. *@
    <MudGrid Justify="Justify.Center" Class="py-16 text-center">
        <MudItem xs="12" md="8">
            @* Main headline *@
            <MudText Typo="Typo.h2" GutterBottom="true" Class="mb-4 font-weight-bold">
                NoteBook
            </MudText>

            @* Subtitle or brief description *@
            <MudText Typo="Typo.h5" Color="Color.Dark" Class="mb-8">
                The revolutionary solution you've been waiting for. Streamline your workflow and boost productivity
                effortlessly.
            </MudText>

            @* Call-to-action buttons *@
            @if (!CurrentContext.IsAuthenticated)
            { 
                <MudButton Variant="Variant.Filled" Color="Color.Primary" Size="Size.Large" OnClick="AddFirebaseCode" Class="mr-4">
                    Connect With DataBase
                </MudButton>
            }
            else
            { 
                <MudButton Variant="Variant.Outlined" Color="Color.Primary" Size="Size.Large" Href="/Home">
                    Start Your NoteBook
                </MudButton>
            }
            
        </MudItem> 
    </MudGrid>

    @* --- Features Section --- *@
    @* Highlighting key features of the app. *@
    <MudGrid Spacing="4" Justify="Justify.Center" Class="py-16">
        <MudItem xs="12">
            <MudText Typo="Typo.h4" Align="Align.Center" GutterBottom="true">Key Features</MudText>
            <MudDivider Class="my-4"/>
        </MudItem>

        @* Feature 1 *@
        <MudItem xs="12" sm="6" md="4">
            <MudCard Elevation="3" Class="d-flex flex-column align-center text-center" Style="height: 100%;">
                <img src="https://codefrydev.in/images/IconCodefrydev.svg" alt="CFD Image"/>
                <MudCardContent Class="pa-6 d-flex flex-column align-items-center">
                    <MudIcon Icon="@Icons.Material.Filled.Sync" Color="Color.Primary" Size="Size.Large" Class="mb-4"/>
                    <MudText Typo="Typo.h6" GutterBottom="true">Real-time Sync</MudText>
                    <MudText Typo="Typo.body2" Color="Color.Dark">Keep your data up-to-date across all your devices
                        instantly.
                    </MudText>
                </MudCardContent>
            </MudCard>
        </MudItem>

        @* Feature 2 *@
        <MudItem xs="12" sm="6" md="4">
            <MudCard Elevation="3" Class="d-flex flex-column align-center text-center" Style="height: 100%;">
                <img src="https://codefrydev.in/images/IconCodefrydev.svg" alt="CFD Image"/>
                <MudCardContent Class="pa-6 d-flex flex-column align-items-center">
                    <MudIcon Icon="@Icons.Material.Filled.Sync" Color="Color.Primary" Size="Size.Large" Class="mb-4"/>
                    <MudText Typo="Typo.h6" GutterBottom="true">Real-time Sync</MudText>
                    <MudText Typo="Typo.body2" Color="Color.Dark">Keep your data up-to-date across all your devices
                        instantly.
                    </MudText>
                </MudCardContent>
            </MudCard>
        </MudItem>

        @* Feature 3 *@
        <MudItem xs="12" sm="6" md="4">
            <MudCard Elevation="3" Class="d-flex flex-column align-center text-center" Style="height: 100%;">
                <img src="https://codefrydev.in/images/IconCodefrydev.svg" alt="CFD Image"/>
                <MudCardContent Class="pa-6 d-flex flex-column align-items-center">
                    <MudIcon Icon="@Icons.Material.Filled.Sync" Color="Color.Primary" Size="Size.Large" Class="mb-4"/>
                    <MudText Typo="Typo.h6" GutterBottom="true">Real-time Sync</MudText>
                    <MudText Typo="Typo.body2" Color="Color.Dark">Keep your data up-to-date across all your devices
                        instantly.
                    </MudText>
                </MudCardContent>
            </MudCard>
        </MudItem>
    </MudGrid>

    @* --- Call to Action (CTA) Section --- *@
    @* Encouraging users to take the next step. *@
    <MudPaper Style="padding:16px; background-color:#ffffffd6;border:4px solid #ffffffb3; border-radius:30px;box-shadow: inset  0 0 10px rgba(0, 0, 0, 0.1);">
        <MudExpansionPanels Style=" border-radius:30px;box-shadow:inset 0 0 10px rgba(0, 0, 0, 0.1);">
            <MudExpansionPanel Text="General" DisableGutters="true" Class="pl-3" Dense="true">
                <pre>
                <code>
Answer one of the following questions
                            </code>
                        </pre>
            </MudExpansionPanel>
            <MudExpansionPanel Text="Corner Cells behaviour" DisableGutters="true" Class="pl-3" Dense="true">
                <MudImage Src="CornerRule.gif" Fluid="true"/>
                <pre>
                <code>
