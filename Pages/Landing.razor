@page "/"

<MudContainer MaxWidth="MaxWidth.Large" Class="mt-16" Color="Color.Primary"> @* Main container for the page content *@

    @* --- Hero Section --- *@
    @* A prominent section to grab user attention. *@
    <MudGrid Justify="Justify.Center" Class="py-16 text-center">
        <MudItem xs="12" md="8">
            @* Main headline *@
            <MudText Typo="Typo.h2" GutterBottom="true" Class="mb-4 font-weight-bold">
                NoteBook still in Development
            </MudText>

            @* Subtitle or brief description *@
            <MudText Typo="Typo.h5" Color="Color.Dark" Class="mb-8">
                Write and Store your notes and shortcut and private in and store in your own database.
            </MudText>

            @* Call-to-action buttons *@
            @if (!CurrentContext.IsAuthenticated)
            {
                <MudButton Variant="Variant.Filled" Color="Color.Primary" Size="Size.Large" OnClick="AddFirebaseCode"
                           Class="mr-4">
                    Connect With DataBase
                </MudButton>
            }
            else
            {
                <MudButton Variant="Variant.Outlined" Color="Color.Primary" Size="Size.Large" OnClick="OpenHomePage">
                    Go To Home Page
                </MudButton>
            }
            <MudButton Variant="Variant.Outlined" Color="Color.Primary" Size="Size.Large" OnClick="OpenThemeManager">
                Choose Theme
            </MudButton>
        </MudItem>
    </MudGrid>
 
    <MudGrid Spacing="4" Justify="Justify.Center" Class="py-16">
        <MudItem xs="12">
            <MudText Typo="Typo.h4" Align="Align.Center" GutterBottom="true">Key Features</MudText>
            <MudDivider Class="my-4"/>
        </MudItem>

       @for (var i = 0; i < 5; i++)
        { 
            <MudItem xs="12" sm="6" md="4">
                <MudCard Elevation="3" Class="d-flex flex-column align-center text-center" Style="height: 100%;">
                    <img src="https://codefrydev.in/images/IconCodefrydev.svg" alt="CFD Image"/>
                    <MudCardContent Class="pa-6 d-flex flex-column align-items-center">
                        <MudIcon Icon="@Icons.Material.Filled.Sync" Color="Color.Primary" Size="Size.Large" Class="mb-4"/>
                        <MudText Typo="Typo.h6" GutterBottom="true">Real-time Sync</MudText>
                        <MudText Typo="Typo.body2" Color="Color.Dark">Keep your data up-to-date across all your devices
                            instantly.
                        </MudText>
                    </MudCardContent>
                </MudCard>
            </MudItem>
        }
    </MudGrid>
 
    <MudPaper
        Style="padding:16px; background-color:#ffffffd6;border:4px solid #ffffffb3; border-radius:30px;box-shadow: inset  0 0 10px rgba(0, 0, 0, 0.1);">
        <MudExpansionPanels Style=" border-radius:30px;box-shadow:inset 0 0 10px rgba(0, 0, 0, 0.1);">
            <MudExpansionPanel Text="Account Creation" DisableGutters="true" Class="pl-3" Dense="true">
                <pre>
                <code>
Create Firebase Account
                            </code>
                        </pre>
            </MudExpansionPanel>
            <MudExpansionPanel Text="Database string" DisableGutters="true" Class="pl-3" Dense="true">
                <MudImage Src="CornerRule.gif" Fluid="true"/>
                <pre>
                <code>
Copy Config File From Firebase
                        </code>
                    </pre>
            </MudExpansionPanel>
            <MudExpansionPanel Text="Fill cofig Data" DisableGutters="true" Class="pl-3" Dense="true">
                <MudImage Src="EdgeRule.gif" Fluid="true"/>
                <pre>
                <code>
Copy Config Data to form 
                        </code>
                    </pre>
            </MudExpansionPanel>
            <MudExpansionPanel Text="Rest Cells behaviour" DisableGutters="true" Class="pl-3 mb-4" Dense="true">
                <MudImage Src="RestRule.gif" Fluid="true"/>
                <pre>
                <code>
Click On Test after filling the form 
                </code>
                </pre>
            </MudExpansionPanel>
        </MudExpansionPanels>
    </MudPaper> 
</MudContainer>


@code
{
    string ImageUrl = "https://codefrydev.in/images/IconCodefrydev.svg";
}
