@page "/csveditor"  
@layout DataLayout
@using System.Linq  

<PageTitle>CSV Editor & Viewer</PageTitle>

<div class="card p-6">
    <h1 class="text-3xl font-bold text-center mb-6 text-gray-900 dark:text-white">CSV Table Viewer & Editor</h1>
    
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-4 mb-6">
        <!-- File Upload -->
        <div class="space-y-2">
            <label class="block text-sm font-medium text-gray-700 dark:text-gray-300">Upload CSV File</label>
            <InputFile OnChange="HandleFileSelected" accept=".csv" class="block w-full text-sm text-gray-500 file:mr-4 file:py-2 file:px-4 file:rounded-full file:border-0 file:text-sm file:font-semibold file:bg-primary-50 file:text-primary-700 hover:file:bg-primary-100 dark:file:bg-gray-700 dark:file:text-gray-300" />
        </div>
        
        <!-- Generate Data -->
        <div class="space-y-2">
            <label class="block text-sm font-medium text-gray-700 dark:text-gray-300">Generate Data</label>
            <div class="flex space-x-2">
                <input @bind="_numberOfDataToBeGenerated" 
                       type="number" 
                       placeholder="Count"
                       class="input flex-1">
                <button @onclick="GenerateDataAsync" class="btn btn-primary">Generate</button>
            </div>
        </div>
        
        <!-- Toggle Edit Mode -->
        <div class="space-y-2">
            <label class="block text-sm font-medium text-gray-700 dark:text-gray-300">Edit Mode</label>
            <button @onclick="ToggleEditMode" class="btn @(_isEditMode ? "btn-secondary" : "btn-primary") w-full">
                @if (_isEditMode)
                {
                    <span>Disable Edit</span>
                }
                else
                {
                    <span>Enable Edit</span>
                }
            </button>
        </div>
        
        <!-- Download CSV -->
        <div class="space-y-2">
            <label class="block text-sm font-medium text-gray-700 dark:text-gray-300">Export</label>
            @if (_tableData.Count > 0)
            {
                <a href="@DownloadLink" download="table_data.csv" class="btn btn-secondary w-full">
                    <span class="mr-2">üì•</span>Download CSV
                </a>
            }
            else
            {
                <button disabled class="btn btn-secondary w-full opacity-50 cursor-not-allowed">
                    <span class="mr-2">üì•</span>Download CSV
                </button>
            }
        </div>
    </div>

    @if (_isLoading)
    {
        <div class="mb-6">
            <div class="flex items-center justify-between mb-2">
                <span class="text-sm font-medium text-gray-700 dark:text-gray-300">Generating data...</span>
                <span class="text-sm text-gray-500 dark:text-gray-400">@Value of @_numberOfDataToBeGenerated</span>
            </div>
            <div class="w-full bg-gray-200 rounded-full h-2 dark:bg-gray-700">
                <div class="bg-primary-600 h-2 rounded-full transition-all duration-300" style="width: @((double)Value / _numberOfDataToBeGenerated * 100)%"></div>
            </div>
        </div>
    }
    else if (_tableData.Count > 0)
    {
        <div class="overflow-x-auto">
            <table class="min-w-full bg-white dark:bg-gray-800 border border-gray-200 dark:border-gray-700 rounded-lg">
                <thead class="bg-gray-50 dark:bg-gray-700">
                    <tr>
                        @foreach (var header in _tableData[0])
                        {
                            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 dark:text-gray-300 uppercase tracking-wider cursor-pointer hover:bg-gray-100 dark:hover:bg-gray-600" @onclick="()=>SortTable(header)">
                                @header.Value
                            </th>
                        }
                    </tr>
                </thead>
                <tbody class="bg-white dark:bg-gray-800 divide-y divide-gray-200 dark:divide-gray-700">
                    @foreach (var row in _tableData.Skip(1))
                    {
                        <tr class="hover:bg-gray-50 dark:hover:bg-gray-700">
                            @foreach (var item in row)
                            {
                                <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900 dark:text-gray-100 relative cursor-pointer"
                                    @onmouseover="@(() => item.IsHovered = true)"
                                    @onmouseout="@(() => item.IsHovered = false)"
                                    @ondblclick="() => ToggleEdit(item)">
                                    
                                    @if (_isEditMode || item.IsEditing)
                                    {
                                        <input @bind="item.Value" 
                                               class="w-full px-2 py-1 border border-gray-300 dark:border-gray-600 rounded bg-white dark:bg-gray-700 text-gray-900 dark:text-gray-100" />
                                        <button @onclick="() => ToggleEdit(item)" 
                                                class="absolute right-2 top-1/2 transform -translate-y-1/2 text-gray-400 hover:text-gray-600 dark:hover:text-gray-300">
                                            üíæ
                                        </button>
                                    }
                                    else
                                    {
                                        <span>@item.Value</span>
                                        @if (item.IsHovered)
                                        {
                                            <button @onclick="() => ToggleEdit(item)" 
                                                    class="absolute right-2 top-1/2 transform -translate-y-1/2 text-gray-400 hover:text-gray-600 dark:hover:text-gray-300">
                                                ‚úèÔ∏è
                                            </button>
                                        }
                                    }
                                </td>
                            }
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }
    else
    {
        <div class="text-center py-12">
            <div class="text-gray-400 dark:text-gray-500 text-lg mb-4">üìä</div>
            <h3 class="text-lg font-medium text-gray-900 dark:text-white mb-2">No data to display</h3>
            <p class="text-gray-500 dark:text-gray-400">Upload a CSV file or generate some data to get started.</p>
        </div>
    }
</div> 