@page "/folder/{folderId}"
@layout FolderLayout
@implements IDisposable

@if (_isLoading)
{
    <InlineLoadingComponent Title="Loading Folder" Subtitle="Please wait while we load your folder contents..." />
}
else if (CurrentFolder == null)
{
    <div class="error-container">
        <div class="error-icon">
            <span class="material-symbols-outlined">folder_off</span>
        </div>
        <h2 class="error-title">Folder Not Found</h2>
        <p class="error-subtitle">The folder you're looking for doesn't exist or has been moved.</p>
        <button @onclick="NavigateToHome" class="btn-primary">
            <span class="material-symbols-outlined">home</span>
            Go to Dashboard
        </button>
    </div>
}
else
{
    <!-- Folder Header -->
    <FolderHeader 
        Folder="CurrentFolder" 
        NotesCount="Notes.Count" 
        ShortcutsCount="Shortcuts.Count" />

    <!-- Content Section -->
    @if (Notes.Any() || Shortcuts.Any())
    {
        <div class="content-section">
            <!-- Content Header -->
            <div class="content-header">
                <div class="flex items-center justify-between">
                    <h2 class="content-title">Contents</h2>
                    <div class="flex items-center gap-3">
                        @if (_isNoteShowing)
                        {
                            <button @onclick="CreateNote" class="btn-modern-primary">
                                <span class="material-symbols-outlined">add</span>
                                <span>Create Note</span>
                            </button>
                        }
                        else
                        {
                            <button @onclick="AddShortcut" class="btn-modern-primary">
                                <span class="material-symbols-outlined">add</span>
                                <span>Create Shortcut</span>
                            </button>
                        }
                        <ContentFilter 
                            IsNotesActive="_isNoteShowing"
                            IsShortcutsActive="!_isNoteShowing"
                            NotesCount="Notes.Count"
                            ShortcutsCount="Shortcuts.Count"
                            OnShowNotes="ShowNotes"
                            OnShowShortcuts="ShowShortcuts" />
                    </div>
                </div>
            </div>

            <!-- Content Grid -->
            <div class="content-grid">
                @if (_isNoteShowing)
                {
                    @foreach (var note in Notes.OrderByDescending(x => x.IsPinned).ThenByDescending(x => x.ModifiedAt))
                    {
                        <NoteCard Note="note" OnNoteClick="OpenNote" />
                    }
                }
                else
                {
                    @foreach (var shortcut in Shortcuts.OrderByDescending(x => x.IsPinned).ThenByDescending(x => x.ModifiedAt))
                    {
                        <ShortcutCard Shortcut="shortcut" OnShortcutClick="OpenShortcut" />
                    }
                }
            </div>
        </div>
    }

    <!-- Empty State -->
    @if (!Notes.Any() && !Shortcuts.Any())
    {
        <EmptyState 
            OnCreateNote="CreateNote"
            OnAddShortcut="AddShortcut" />
    }
}

@if (_showAddNoteDialog)
{
    <AddNoteDialog 
        OnSave="OnNoteSaved"
        OnCancel="OnNoteDialogCancel"
        AvailableFolders="@InMemoryRepo.Folders" />
}

@if (_showAddShortcutDialog)
{
    <AddShortcutDialog 
        OnSave="OnShortcutSaved"
        OnCancel="OnShortcutDialogCancel"
        AvailableFolders="@InMemoryRepo.Folders"
        AvailableCategories="@InMemoryRepo.Categories" />
}

