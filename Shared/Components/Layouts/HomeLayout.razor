@namespace YourNoteBook.Shared.Components.Layouts
@inherits LayoutComponentBase
@using YourNoteBook.Shared.Components.UI.Snackbar  

<div class="home-layout">
    <!-- Home Header -->
    <header class="home-header">
        <div class="header-content">
            <!-- Logo and Title -->
            <div class="logo-section">
                <div class="logo-icon">
                    <svg viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
                        <path d="M3 7V5C3 3.89543 3.89543 3 5 3H9L11 5H19C20.1046 5 21 5.89543 21 7V17C21 18.1046 20.1046 19 19 19H5C3.89543 19 3 18.1046 3 17V7Z" 
                              stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
                        <path d="M8 11H16M8 15H12" stroke="currentColor" stroke-width="2" stroke-linecap="round"/>
                    </svg>
                </div>
                <h1 class="app-title">YourNoteBook</h1>
            </div>

            <!-- Search Bar -->
            <div class="search-container">
                <div class="search-icon">
                    <span class="material-symbols-outlined">search</span>
                </div>
                <input type="text" placeholder="Search notes, folders, shortcuts..." class="search-input" />
            </div>

            <!-- Header Actions -->
            <div class="header-actions">
                <button class="action-btn" title="Create New">
                    <span class="material-symbols-outlined">add</span>
                </button>
                <button class="action-btn" title="Notifications">
                    <span class="material-symbols-outlined">notifications</span>
                </button>
                <button class="theme-toggle" onclick="toggleTheme()" title="Toggle Theme">
                    <span class="material-symbols-outlined" id="theme-icon-home">dark_mode</span>
                </button>
                <div class="user-avatar">
                    <img src="https://lh3.googleusercontent.com/aida-public/AB6AXuAVKh-4nO9OFQV5z0BPegucoA3Dz_0m_TOObVhRT32kACloK6X3TYQyUH7qwdZOXITgLljZ5L5KqvHJiukvLVFJQSHlQ0nuBlaEXBhWLIoDXw5bf7Xxi0loIVqbE7RSBC3v2qq3G7sCQQXOpac6yhXZV-x8HPAkX49DL8NmlG7R8Tacxywnnlv8MD0JtizmGneD6U11LgeI6VaDU63E3oDL9qOOfQPaWxlBt35Su3z7H61bnVuNKULabWCRTunXaMom-Neur85RvWVT" 
                         alt="User Avatar" class="avatar-img" />
                </div>
            </div>
        </div>
    </header>
    
    <div class="home-body">
        <!-- Home Sidebar -->
        <aside class="home-sidebar">
            <div class="sidebar-content">
                <!-- Quick Stats -->
                <div class="stats-section">
                    <h3 class="section-title">Quick Stats</h3>
                    <div class="stats-grid">
                        <div class="stat-card">
                            <div class="stat-icon folders">
                                <span class="material-symbols-outlined">folder</span>
                            </div>
                            <div class="stat-info">
                                <span class="stat-number">12</span>
                                <span class="stat-label">Folders</span>
                            </div>
                        </div>
                        <div class="stat-card">
                            <div class="stat-icon notes">
                                <span class="material-symbols-outlined">description</span>
                            </div>
                            <div class="stat-info">
                                <span class="stat-number">45</span>
                                <span class="stat-label">Notes</span>
                            </div>
                        </div>
                        <div class="stat-card">
                            <div class="stat-icon shortcuts">
                                <span class="material-symbols-outlined">keyboard</span>
                            </div>
                            <div class="stat-info">
                                <span class="stat-number">8</span>
                                <span class="stat-label">Shortcuts</span>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Quick Actions -->
                <div class="actions-section">
                    <h3 class="section-title">Quick Actions</h3>
                    <div class="action-buttons">
                        <button class="action-btn-primary">
                            <span class="material-symbols-outlined">add</span>
                            <span>New Note</span>
                        </button>
                        <button class="action-btn-secondary">
                            <span class="material-symbols-outlined">folder_plus</span>
                            <span>New Folder</span>
                        </button>
                        <button class="action-btn-secondary">
                            <span class="material-symbols-outlined">keyboard</span>
                            <span>Add Shortcut</span>
                        </button>
                    </div>
                </div>

                <!-- Recent Activity -->
                <div class="activity-section">
                    <h3 class="section-title">Recent Activity</h3>
                    <div class="activity-list">
                        <div class="activity-item">
                            <div class="activity-icon">
                                <span class="material-symbols-outlined">edit</span>
                            </div>
                            <div class="activity-content">
                                <span class="activity-text">Updated "Meeting Notes"</span>
                                <span class="activity-time">2 hours ago</span>
                            </div>
                        </div>
                        <div class="activity-item">
                            <div class="activity-icon">
                                <span class="material-symbols-outlined">add</span>
                            </div>
                            <div class="activity-content">
                                <span class="activity-text">Created "Project Ideas"</span>
                                <span class="activity-time">5 hours ago</span>
                            </div>
                        </div>
                        <div class="activity-item">
                            <div class="activity-icon">
                                <span class="material-symbols-outlined">folder_open</span>
                            </div>
                            <div class="activity-content">
                                <span class="activity-text">Opened "Work" folder</span>
                                <span class="activity-time">1 day ago</span>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </aside>
        
        <!-- Main Content Area -->
        <main class="home-main">
            <div class="content-wrapper">
                @Body
            </div>
        </main>
    </div>
    
    <!-- Snackbar Component -->
    <SnackbarComponent />
</div>

<style>
    .home-layout {
        min-height: 100vh;
        background-color: #f9fafb;
        color: #111827;
    }

    .dark .home-layout {
        background-color: #111827;
        color: #f9fafb;
    }

    .home-header {
        background-color: white;
        border-bottom: 1px solid #e5e7eb;
        box-shadow: 0 1px 3px 0 rgb(0 0 0 / 0.1);
        backdrop-filter: blur(10px);
    }

    .dark .home-header {
        background-color: #1f2937;
        border-bottom-color: #374151;
    }

    .header-content {
        display: flex;
        align-items: center;
        justify-content: space-between;
        padding: 1rem 1.5rem;
        max-width: 80rem;
        margin: 0 auto;
    }

    .logo-section {
        display: flex;
        align-items: center;
        gap: 0.75rem;
    }

    .logo-icon {
        width: 2rem;
        height: 2rem;
        color: #2563eb;
    }

    .dark .logo-icon {
        color: #60a5fa;
    }

    .app-title {
        font-size: 1.25rem;
        font-weight: 700;
        color: #111827;
    }

    .dark .app-title {
        color: white;
    }

    .search-container {
        position: relative;
        flex: 1;
        max-width: 28rem;
        margin: 0 2rem;
    }

    .search-icon {
        position: absolute;
        left: 0.75rem;
        top: 50%;
        transform: translateY(-50%);
        color: #9ca3af;
    }

    .search-input {
        width: 100%;
        padding: 0.5rem 0.75rem 0.5rem 2.5rem;
        background-color: #f3f4f6;
        border: 1px solid #d1d5db;
        border-radius: 0.5rem;
        font-size: 0.875rem;
        transition: all 0.2s;
    }

    .dark .search-input {
        background-color: #374151;
        border-color: #4b5563;
        color: #f9fafb;
    }

    .search-input:focus {
        outline: none;
        border-color: #3b82f6;
        box-shadow: 0 0 0 3px rgb(59 130 246 / 0.1);
    }

    .header-actions {
        display: flex;
        align-items: center;
        gap: 0.5rem;
    }

    .action-btn, .theme-toggle {
        padding: 0.5rem;
        color: #6b7280;
        border-radius: 0.5rem;
        transition: all 0.2s;
        border: none;
        background: none;
        cursor: pointer;
    }

    .action-btn:hover, .theme-toggle:hover {
        color: #374151;
        background-color: #f3f4f6;
    }

    .dark .action-btn, .dark .theme-toggle {
        color: #9ca3af;
    }

    .dark .action-btn:hover, .dark .theme-toggle:hover {
        color: #e5e7eb;
        background-color: #374151;
    }

    .user-avatar {
        width: 2rem;
        height: 2rem;
        border-radius: 50%;
        overflow: hidden;
        margin-left: 0.5rem;
    }

    .avatar-img {
        width: 100%;
        height: 100%;
        object-fit: cover;
    }

    .home-body {
        display: flex;
        flex: 1;
    }

    .home-sidebar {
        width: 20rem;
        background-color: white;
        border-right: 1px solid #e5e7eb;
        display: flex;
        flex-direction: column;
    }

    .dark .home-sidebar {
        background-color: #1f2937;
        border-right-color: #374151;
    }

    .sidebar-content {
        display: flex;
        flex-direction: column;
        height: 100%;
        padding: 1.5rem;
        gap: 2rem;
    }

    .section-title {
        font-size: 0.875rem;
        font-weight: 600;
        color: #6b7280;
        text-transform: uppercase;
        letter-spacing: 0.05em;
        margin-bottom: 1rem;
    }

    .dark .section-title {
        color: #9ca3af;
    }

    .stats-grid {
        display: grid;
        grid-template-columns: 1fr;
        gap: 0.75rem;
    }

    .stat-card {
        display: flex;
        align-items: center;
        gap: 0.75rem;
        padding: 0.75rem;
        background-color: #f9fafb;
        border-radius: 0.5rem;
        border: 1px solid #e5e7eb;
    }

    .dark .stat-card {
        background-color: #374151;
        border-color: #4b5563;
    }

    .stat-icon {
        width: 2rem;
        height: 2rem;
        border-radius: 0.375rem;
        display: flex;
        align-items: center;
        justify-content: center;
    }

    .stat-icon.folders {
        background-color: #dbeafe;
        color: #2563eb;
    }

    .dark .stat-icon.folders {
        background-color: rgb(59 130 246 / 0.3);
        color: #60a5fa;
    }

    .stat-icon.notes {
        background-color: #dcfce7;
        color: #16a34a;
    }

    .dark .stat-icon.notes {
        background-color: rgb(34 197 94 / 0.3);
        color: #4ade80;
    }

    .stat-icon.shortcuts {
        background-color: #fed7aa;
        color: #ea580c;
    }

    .dark .stat-icon.shortcuts {
        background-color: rgb(251 146 60 / 0.3);
        color: #fb923c;
    }

    .stat-info {
        display: flex;
        flex-direction: column;
    }

    .stat-number {
        font-size: 1.125rem;
        font-weight: 600;
        color: #111827;
    }

    .dark .stat-number {
        color: white;
    }

    .stat-label {
        font-size: 0.75rem;
        color: #6b7280;
    }

    .dark .stat-label {
        color: #9ca3af;
    }

    .action-buttons {
        display: flex;
        flex-direction: column;
        gap: 0.5rem;
    }

    .action-btn-primary, .action-btn-secondary {
        display: flex;
        align-items: center;
        gap: 0.5rem;
        padding: 0.75rem;
        font-size: 0.875rem;
        font-weight: 500;
        border-radius: 0.5rem;
        transition: all 0.2s;
        border: none;
        cursor: pointer;
        width: 100%;
    }

    .action-btn-primary {
        background-color: #2563eb;
        color: white;
    }

    .action-btn-primary:hover {
        background-color: #1d4ed8;
    }

    .action-btn-secondary {
        background-color: #f3f4f6;
        color: #374151;
    }

    .dark .action-btn-secondary {
        background-color: #374151;
        color: #d1d5db;
    }

    .action-btn-secondary:hover {
        background-color: #e5e7eb;
    }

    .dark .action-btn-secondary:hover {
        background-color: #4b5563;
    }

    .activity-list {
        display: flex;
        flex-direction: column;
        gap: 0.75rem;
    }

    .activity-item {
        display: flex;
        align-items: center;
        gap: 0.75rem;
        padding: 0.5rem;
    }

    .activity-icon {
        width: 1.5rem;
        height: 1.5rem;
        background-color: #f3f4f6;
        border-radius: 0.25rem;
        display: flex;
        align-items: center;
        justify-content: center;
        color: #6b7280;
    }

    .dark .activity-icon {
        background-color: #374151;
        color: #9ca3af;
    }

    .activity-content {
        display: flex;
        flex-direction: column;
        flex: 1;
    }

    .activity-text {
        font-size: 0.875rem;
        color: #374151;
    }

    .dark .activity-text {
        color: #d1d5db;
    }

    .activity-time {
        font-size: 0.75rem;
        color: #9ca3af;
    }

    .home-main {
        flex: 1;
        overflow: auto;
    }

    .content-wrapper {
        padding: 1.5rem;
        max-width: 80rem;
        margin: 0 auto;
    }

    /* Responsive Design */
    @@media (max-width: 1024px) {
        .home-sidebar {
            width: 16rem;
        }
    }

    @@media (max-width: 768px) {
        .home-sidebar {
            width: 4rem;
        }
        
        .sidebar-content {
            padding: 1rem;
        }
        
        .section-title {
            display: none;
        }
        
        .stat-card {
            flex-direction: column;
            text-align: center;
            padding: 0.5rem;
        }
        
        .stat-info {
            display: none;
        }
        
        .action-btn-primary span:not(.material-symbols-outlined),
        .action-btn-secondary span:not(.material-symbols-outlined) {
            display: none;
        }
        
        .activity-item {
            justify-content: center;
        }
        
        .activity-content {
            display: none;
        }
        
        .search-container {
            margin: 0 1rem;
        }
        
        .header-content {
            padding: 1rem;
        }
    }
</style>

<script>
    function toggleTheme() {
        const html = document.documentElement;
        const themeIcon = document.getElementById('theme-icon-home');
        
        if (html.classList.contains('dark')) {
            html.classList.remove('dark');
            themeIcon.textContent = 'dark_mode';
            localStorage.setItem('theme', 'light');
        } else {
            html.classList.add('dark');
            themeIcon.textContent = 'light_mode';
            localStorage.setItem('theme', 'dark');
        }
    }
    
    // Initialize theme on page load
    document.addEventListener('DOMContentLoaded', function() {
        const savedTheme = localStorage.getItem('theme');
        const themeIcon = document.getElementById('theme-icon-home');
        
        if (savedTheme === 'dark') {
            document.documentElement.classList.add('dark');
            themeIcon.textContent = 'light_mode';
        } else {
            document.documentElement.classList.remove('dark');
            themeIcon.textContent = 'dark_mode';
        }
    });
</script>
