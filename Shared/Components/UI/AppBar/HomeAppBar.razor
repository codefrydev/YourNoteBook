
<header class="bg-gradient-to-r from-gray-900 via-gray-800 to-gray-900 text-white shadow-large backdrop-blur-sm">
    <div class="container mx-auto px-4 sm:px-6 lg:px-8 py-3 sm:py-4">
        <div class="flex items-center justify-between">
            <!-- Left Section -->
            <div class="flex items-center space-x-2 sm:space-x-4">
                @if (IsHamburgerMenuVisible)
                {
                    <button onclick="toggleMobileNav()" class="p-2 rounded-lg hover:bg-gray-700 transition-colors lg:hidden">
                        <span class="text-xl">☰</span>
                    </button>
                }
                <h1 class="text-lg sm:text-xl lg:text-2xl font-bold text-gradient truncate">@Heading</h1>
            </div>
            
            <!-- Center Section - Search (Hidden on mobile, visible on tablet+) -->
            <div class="hidden md:flex flex-1 max-w-md mx-4 lg:mx-8">
                <div class="relative w-full">
                    <input @bind="Search" 
                           type="text" 
                           placeholder="Search folders and notes..." 
                           class="w-full px-4 py-2 pl-10 bg-gray-800 border border-gray-600 rounded-xl text-white placeholder-gray-400 focus:ring-2 focus:ring-primary-500 focus:border-primary-500 transition-all duration-200 focus:bg-gray-700">
                    <span class="absolute left-3 top-1/2 transform -translate-y-1/2 text-gray-400">🔍</span>
                </div>
            </div>
            
            <!-- Right Section -->
            <div class="flex items-center space-x-1 sm:space-x-2">
                @if (CurrentContext.IsAuthenticated)
                {
                    <button @onclick="AddNewFolder" 
                            class="p-2 sm:p-3 rounded-lg bg-primary-600 hover:bg-primary-700 transition-all duration-200 hover:scale-105 shadow-md"
                            title="Add New Folder">
                        <span class="text-sm sm:text-lg">📁➕</span>
                    </button>
                }
                else
                {
                    <button @onclick="SyncFromLocalStorage" 
                            class="p-2 sm:p-3 rounded-lg bg-green-600 hover:bg-green-700 transition-all duration-200 hover:scale-105 shadow-md"
                            title="Sync with Local Storage">
                        <span class="text-sm sm:text-lg">🔄</span>
                    </button>
                }
                
                <button @onclick="AddFirebaseCode" 
                        class="p-2 sm:p-3 rounded-lg hover:bg-gray-700 transition-all duration-200 hover:scale-105"
                        title="Settings">
                    <span class="text-sm sm:text-lg">⚙️</span>
                </button>
                
                <button @onclick="ToggleDarkMode" 
                        class="p-2 sm:p-3 rounded-lg hover:bg-gray-700 transition-all duration-200 hover:scale-105"
                        title="@(CurrentContext.IsDarkMode ? "Switch to Light Mode" : "Switch to Dark Mode")">
                    <span class="text-sm sm:text-lg">@(CurrentContext.IsDarkMode ? "☀️" : "🌙")</span>
                </button>
            </div>
        </div>
        
        <!-- Mobile Search Bar (Visible only on mobile) -->
        <div class="md:hidden mt-3">
            <div class="relative">
                <input @bind="Search" 
                       type="text" 
                       placeholder="Search..." 
                       class="w-full px-4 py-2 pl-10 bg-gray-800 border border-gray-600 rounded-xl text-white placeholder-gray-400 focus:ring-2 focus:ring-primary-500 focus:border-primary-500 transition-all duration-200 focus:bg-gray-700">
                <span class="absolute left-3 top-1/2 transform -translate-y-1/2 text-gray-400">🔍</span>
            </div>
        </div>
    </div>
</header>

<!-- Popup Components -->
@if (_showAddFolderDialog)
{
    <AddNewFolderDialogue OnSave="OnFolderSaved" OnCancel="OnFolderDialogCancel" />
}

@if (_showFirebaseDialog)
{
    <FireBaseDialogue OnSave="OnFirebaseSaved" OnCancel="OnFirebaseDialogCancel" />
}
 