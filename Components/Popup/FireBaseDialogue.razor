<MudDialog Style="@Constant.DialogueUiStyle" MaxWidth="MaxWidth.Medium">
    <TitleContent>
        <MudText Typo="Typo.h5" Class="font-weight-bold text-center sm:text-left">
            Firebase Config Setup
        </MudText>
    </TitleContent>
    <DialogContent>
        <MudTabs Elevation="2" Rounded="true" ApplyEffectsToContainer="true" PanelClass="pa-6" MinimumTabWidth="20px" Centered="true">
            <MudTabPanel Text="Paste JSON Config">
                <MudTextField AutoGrow="true" @bind-Value="@_configJson" Label="Firebase config" Variant="Variant.Outlined" ></MudTextField> 
            </MudTabPanel>
            <MudTabPanel Text="Populate Each Field">
                <MudTextField @bind-Value="FirebaseConfig.ApiKey" Label="API Key" Variant="Variant.Filled" Class="mb-3"/>
                <MudTextField @bind-Value="FirebaseConfig.AuthDomain" Label="Auth Domain" Variant="Variant.Filled"
                              Class="mb-3"/>
                <MudTextField @bind-Value="FirebaseConfig.ProjectId" Label="Project ID" Variant="Variant.Filled" Class="mb-3"/>
                <MudTextField @bind-Value="FirebaseConfig.StorageBucket" Label="Storage Bucket" Variant="Variant.Filled"
                              Class="mb-3"/>
                <MudTextField @bind-Value="FirebaseConfig.MessagingSenderId" Label="Messaging Sender ID"
                              Variant="Variant.Filled" Class="mb-3"/>
                <MudTextField @bind-Value="FirebaseConfig.AppId" Label="App ID" Variant="Variant.Filled" Class="mb-3"/>
            </MudTabPanel> 
        </MudTabs>
        

        @if (!string.IsNullOrEmpty(_testResult))
        {
            <MudText Class="mt-4">@_testResult</MudText>
        }
    </DialogContent>
    <DialogActions>
        @if (_testing)
        {
            <MudProgressCircular Color="Color.Success" Indeterminate="true"/>
        } 
        <MudFab StartIcon="@_testFireBaseState.Icon.Icon"
                Label="@_testFireBaseState.Message" 
                Color="@_testFireBaseState.Icon.Color" 
                OnClick="@TestFirebaseConfig"/>
    </DialogActions>
</MudDialog>
 