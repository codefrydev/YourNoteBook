<MudDialog Style="@Constant.DialogueUiStyle" MaxWidth="MaxWidth.Medium" >
    <TitleContent>
        <MudText Typo="Typo.h5" Class="mb-2">ğŸ“ Create New Folder</MudText>
    </TitleContent>

    <DialogContent>

        <MudTextField T="string"
                      @bind-Value="Model.Name"
                      Label="Folder Name"
                      Variant="Variant.Outlined"
                      FullWidth="true"
                      Adornment="Adornment.Start"
                      AdornmentIcon="@Icons.Material.Filled.CreateNewFolder"
                      Margin="Margin.Dense" />
        <MudTextField T="string"
                      @bind-Value="@Model.Description"
                      Label="Folder Description"
                      Variant="Variant.Outlined"
                      FullWidth="true"
                      Adornment="Adornment.Start"
                      AdornmentIcon="@Icons.Material.Filled.Description"
                      Margin="Margin.Dense" />
        
        <MudSelect @bind-Value="Model.Icon"
                   Label="Select Folder Icon"
                   Variant="Variant.Outlined"
                   Dense="true"
                   FullWidth="true">
            @foreach (var icon in Constant.IconsList)
            {
                <MudSelectItem Value="@icon">
                    <MudIcon Icon="@icon" Title="@icon.Split(" ")[^1]" Color="Color.Default" Class="mr-2" />
                    @icon.Split(" ")[^1]
                </MudSelectItem>
            }
        </MudSelect>

        <div class="d-flex align-items-center gap-4">
            <MudColorPicker
                Label="Icon Color"
                @bind-Text="Model.IconColor"
                Placeholder="Select Color"
                ShowToolbar="true"
                ShowColorField="true"
                ShowSliders="true"
                ShowModeSwitch="true"
                ShowInputs="true"
                Class="flex-grow-1" />

            <MudIcon Icon="@Model.Icon"
                     Size="Size.Large"
                     Color="Color.Default"
                     Style="@($"color:{Model.IconColor}; font-size:36px;")"
                     Class="mt-4" />
        </div>
        <div class="d-flex align-items-center gap-4">
            <MudColorPicker
                Label="Background Color"
                @bind-Text="Model.BackGroundColor"
                Placeholder="Select Color"
                ShowToolbar="true"
                ShowColorField="true"
                ShowSliders="true"
                ShowModeSwitch="true"
                ShowInputs="true"
                Class="flex-grow-1" />

            <MudIcon Icon="@Model.Icon"
                     Size="Size.Large"
                     Color="Color.Default"
                     Style="@($"color:{Model.BackGroundColor}; font-size:36px;")"
                     Class="mt-4" />
        </div>
    </DialogContent>

    <DialogActions >
        <MudButton Variant="Variant.Text" OnClick="Cancel">Cancel</MudButton>
        <MudButton Color="Color.Primary" Variant="Variant.Filled" OnClick="Submit">Create</MudButton>
    </DialogActions>
</MudDialog>
 