@inject IDialogService DialogService

<MudCard @onclick="OpenFolder" Style=@($"background-color:{Model.BackGroundColor}")>
    <MudCardHeader>
        <CardHeaderAvatar>
            <MudAvatar Color="Color.Transparent">
                <MudIcon Icon="@Model.Icon" Style=@($"color:{Model.IconColor}") ></MudIcon>
            </MudAvatar>
        </CardHeaderAvatar>
        <CardHeaderContent>
            <MudText Typo="Typo.body1">@Model.Name</MudText>
            <MudText Typo="Typo.body2">@Model.UpdatedAt.ToString("M/d/yy")</MudText>
        </CardHeaderContent>
        <CardHeaderActions>
            <MudIconButton Icon="@Icons.Material.Filled.Settings" Color="Color.Default" OnClick="UpdateItem" />
        </CardHeaderActions>
    </MudCardHeader> 
    <MudCardContent>
        <MudText Typo="Typo.body2">@Model.Description</MudText>
    </MudCardContent>
    <MudCardActions>
        @if (Model.IsPinned)
        {
            <MudIconButton Icon="@Icons.Material.Filled.Favorite" 
                           Color="Color.Success" 
                           Variant="Variant.Filled" 
                           OnClick="MakeChangesToPinning"
                           Ripple="true" 
                           />
        }
        else
        {
            <MudIconButton Icon="@Icons.Material.Filled.Favorite" 
                           Color="Color.Default" 
                           Variant="Variant.Outlined" 
                           OnClick="MakeChangesToPinning"
                           Ripple="true"
            />
        }
        <MudSpacer/>
        <MudIconButton Icon="@Icons.Material.Filled.Delete" Color="Color.Error" OnClick="Delete"/>
    </MudCardActions>
</MudCard>