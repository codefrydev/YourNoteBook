<MudAppBar Style="background-color: #1E1E2F; color: white;" Elevation="2">
    <MudIconButton Icon="@Icons.Material.Filled.Menu"
                   Color="Color.Secondary"
                   Edge="Edge.Start"
                   OnClick="DrawerToggle"/>

    <MudIconButton Icon="@Icons.Material.Filled.ArrowBack"
                   Color="Color.Info"
                   OnClick="GoBack"/>

    <!-- Search Input -->
    <MudTextField @bind-Value="Search"
                  Label="Search"
                  Variant="Variant.Outlined"
                  Adornment="Adornment.End"
                  AdornmentIcon="@Icons.Material.Filled.Search"
                  AdornmentColor="Color.Secondary"
                  Class="mx-4"
                  Style="max-width: 400px;"/>
    <MudSpacer/>
    <MudTooltip Text="Add Notes">
        <MudIconButton Icon="@Icons.Material.Filled.NoteAdd"
                       Color="Color.Success"
                       OnClick="AddNotes"/>
    </MudTooltip>

    <MudTooltip Text="Add Shortcut">
        <MudIconButton Icon="@Icons.Material.Filled.Shortcut"
                       Color="Color.Info"
                       OnClick="AddShortcut"/>
    </MudTooltip>
    <MudToggleIconButton @bind-Toggled="@CurrentContext.IsDarkMode"
                         Icon="@Icons.Material.Filled.Lightbulb"
                         Color="@Color.Error"
                         ToggledIcon="@Icons.Material.Filled.DarkMode"
                         ToggledColor="@Color.Success"
                         title="@(@CurrentContext.IsDarkMode ? "Light" : "Dark")" />
</MudAppBar>

<MudDrawer @bind-Open="_drawerOpen" Elevation="2" Color="Color.Default" ClipMode="DrawerClipMode.Always">
    <FolderNavMenu/>
</MudDrawer>